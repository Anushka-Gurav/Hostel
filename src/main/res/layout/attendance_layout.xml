<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp">
    <EditText
        android:id="@+id/editTextName"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="@drawable/edittext_bkg"
        android:hint="Enter Name"/>
    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/imageViewCaptured"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/edittext_bkg"
        android:scaleType="fitCenter"/>
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btnCapture"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cyan"
        android:text="Capture Image"/>
    <Button
        android:id="@+id/btnMarkAttendance"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cyan"
        android:text="Mark Attendance"/>
    <Button
        android:id="@+id/btnViewAttendance"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cyan"
        android:text="View Attendance"/>
    <Button
        android:id="@+id/btnDownloadAttendance"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cyan"
        android:text="Download Attendance"/>
    <TextView
        android:id="@+id/textViewAttendanceStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Attendance Status will appear here"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:background="#f0f0f0"
        android:textColor="#000000"/>
</LinearLayout>